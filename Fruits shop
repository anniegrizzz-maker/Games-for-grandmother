#@title –ö—É–ø–∏—Ç–µ —Ñ—Ä—É–∫—Ç—ã –ø–æ –Ω–∏–∑–∫–æ–π —Ü–µ–Ω–µ!
import random

# üí∞ –ù–∞—á–∞–ª—å–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ
budget = 200
fruit_store = {
    '–±–∞–Ω–∞–Ω': 30,
    '—è–±–ª–æ–∫–æ': 25,
    '–≥—Ä—É—à–∞': 40,
    '–∞–ø–µ–ª—å—Å–∏–Ω': 35,
    '–∫–∏–≤–∏': 50,
    '–∞–Ω–∞–Ω–∞—Å': 100,
    '–º–∞–Ω–≥–æ': 120,
    '–∞—Ä–±—É–∑': 150,
    '–≤–∏–Ω–æ–≥—Ä–∞–¥': 70
}

# üß† –°–ª–æ–∂–Ω—ã–µ –∑–∞–≥–∞–¥–∫–∏
riddles = [
    {
        "question": "–ù–µ –º—è—Å–æ, –Ω–µ –ø—Ç–∏—Ü–∞,\n–ê —à–∫—É—Ä–∞ –µ—Å—Ç—å,\n–°–ª–∞–¥–∫–∏–π –≤–Ω—É—Ç—Ä–∏,\n–ù–æ –≤ —Ä–æ—Ç –Ω–µ –≤–ª–µ–∑—Ç—å —Ü–µ–ª–∏–∫–æ–º,\n–ü—Ä–∏–¥—ë—Ç—Å—è –¥–µ–ª–∏—Ç—å.",
        "answer": "–∞—Ä–±—É–∑",
        "hint": "–≠—Ç–æ —Ñ—Ä—É–∫—Ç —Å —Å–µ–º–µ—á–∫–∞–º–∏ –≤–Ω—É—Ç—Ä–∏, –∏ –µ–≥–æ –ª—é–±—è—Ç –≤ –∂–∞—Ä–∫–∏–µ –¥–Ω–∏."
    },
    {
        "question": "–Ø –∫–∞–∫ —Å–æ–ª–Ω—Ü–µ, –Ω–æ –Ω–µ –≥—Ä–µ—é,\n–°–æ—á–Ω–∞—è —è, —Ö–æ—Ç—å –∏ –Ω–µ –ª–∏–≤–µ–Ω—å.\n–í–∫—É—Å –≤–æ –º–Ω–µ, –∫–∞–∫ –≤ —Å–∫–∞–∑–∫–µ,\n–ù–æ –∏–∑-–∑–∞ –∫–æ—Å—Ç–æ—á–µ–∫ ‚Äî –±–µ–¥–∞ –≤ –æ–ø–∞—Å–∫–µ.",
        "answer": "–º–∞–Ω–≥–æ",
        "hint": "–≠—Ç–æ—Ç —Ñ—Ä—É–∫—Ç —Ä–∞—Å—Ç—ë—Ç –≤ —Ç—Ä–æ–ø–∏–∫–∞—Ö –∏ –∏–º–µ–µ—Ç –º–Ω–æ–≥–æ –∫–æ—Å—Ç–æ—á–µ–∫ –≤–Ω—É—Ç—Ä–∏."
    },
    {
        "question": "–°–Ω–∞—Ä—É–∂–∏ ‚Äî –∫–∞–∫ –±—Ä–æ–Ω—è,\n–í–Ω—É—Ç—Ä–∏ ‚Äî –∫–∞–∫ –Ω–µ–∂–Ω–∞—è –≤–µ—Å–Ω–∞.\n–£ –º–µ–Ω—è –∑–µ–ª—ë–Ω—ã–µ –≥–ª–∞–∑–∞,\n–ù–æ —è –Ω–µ –∂–∏–≤–æ—Ç–Ω–æ–µ, —è –¥–ª—è —Å—Ç–æ–ª–∞.",
        "answer": "–∫–∏–≤–∏",
        "hint": "–£ —ç—Ç–æ–≥–æ —Ñ—Ä—É–∫—Ç–∞ –∫–æ—Ä–∏—á–Ω–µ–≤–∞—è –∫–æ–∂—É—Ä–∞, –∞ –≤–Ω—É—Ç—Ä–∏ –∑–µ–ª—ë–Ω–∞—è –º—è–∫–æ—Ç—å —Å –º–∞–ª–µ–Ω—å–∫–∏–º–∏ —á—ë—Ä–Ω—ã–º–∏ —Å–µ–º–µ—á–∫–∞–º–∏."
    },
    {
        "question": "–ú–µ–Ω—è –º–æ–∂–Ω–æ —Ä–∞–∑—Ä–µ–∑–∞—Ç—å,\n–ù–æ —Ç–æ–ª—å–∫–æ –Ω–µ –ø–æ—Ä–µ–∑–∞—Ç—å.\n–°–µ–º–µ—á–∫–∏ –≤–Ω—É—Ç—Ä–∏ –Ω–∞–π–¥—ë—à—å ‚Äî\n–ó–Ω–∞—á–∏—Ç, –≤ —Ä–æ—Ç –º–µ–Ω—è –≤–æ–∑—å–º—ë—à—å.",
        "answer": "–≤–∏–Ω–æ–≥—Ä–∞–¥",
        "hint": "–≠—Ç–æ—Ç —Ñ—Ä—É–∫—Ç —Å–æ—Å—Ç–æ–∏—Ç –∏–∑ –º–Ω–æ–∂–µ—Å—Ç–≤–∞ –º–∞–ª–µ–Ω—å–∫–∏—Ö —è–≥–æ–¥, –µ–≥–æ –µ–¥—è—Ç –≤ –±–æ–ª—å—à–∏—Ö –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞—Ö."
    },
    {
        "question": "–ú–æ–π —Å—Ä–µ–∑ ‚Äî –∫–∞–∫ —Å–æ–ª–Ω—Ü–µ —è—Ä–∫–æ–µ,\n–ö–æ–ª—å—Ü–æ, –∫–∞–∫ —É –≤–æ–ª—à–µ–±–Ω–∏–∫–∞.\n–ù–∞ —Ç—Ä–æ–ø–∏–∫–∞—Ö —è –≤—ã—Ä–æ—Å —Å–∞–º,\n–¢—ã –ª—é–±–∏—à—å –º–µ–Ω—è –ø–æ —É—Ç—Ä–∞–º.",
        "answer": "–∞–Ω–∞–Ω–∞—Å",
        "hint": "–≠—Ç–æ—Ç —Ñ—Ä—É–∫—Ç –∏–º–µ–µ—Ç –∫–æ–ª—é—á—É—é –∫–æ–∂—É—Ä—É –∏ –º–Ω–æ–∂–µ—Å—Ç–≤–æ –º–∞–ª–µ–Ω—å–∫–∏—Ö –≥–ª–∞–∑–∫–æ–≤ –Ω–∞ –ø–æ–≤–µ—Ä—Ö–Ω–æ—Å—Ç–∏."
