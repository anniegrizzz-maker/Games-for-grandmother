# üéÆ –ù–∞—á–∞–ª–æ –∏–≥—Ä—ã
print("üçâ –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ —Ñ—Ä—É–∫—Ç–æ–≤—ã–π –º–∞–≥–∞–∑–∏–Ω!")
print(f"–£ –≤–∞—Å –µ—Å—Ç—å {budget} —Å–æ–º. –í–æ—Ç —á—Ç–æ —É –Ω–∞—Å –µ—Å—Ç—å:\n")

for fruit, price in fruit_store.items():
    print(f"üçì {fruit.title():<10} ‚Äî {price} —Å–æ–º")

cart = []
purchase_count = 0

def offer_riddle():
    for riddle in riddles:
        print("\nüß† –ó–∞–≥–∞–¥–∫–∞ –¥–ª—è –≤–∞—Å:")
        print(riddle["question"])

        attempts = 0
        hint_used = False  # –§–ª–∞–≥ –¥–ª—è –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –ø–æ–¥—Å–∫–∞–∑–∫–∏ —Ç–æ–ª—å–∫–æ –æ–¥–∏–Ω —Ä–∞–∑
        while True:
            guess = input("–í–∞—à –æ—Ç–≤–µ—Ç: ").strip().lower()
            if guess == riddle["answer"]:
                print("üéâ –í–µ—Ä–Ω–æ!")
                reward = input("–•–æ—Ç–∏—Ç–µ üçí —Ñ—Ä—É–∫—Ç –∏–ª–∏ üí∏ 20 —Å–æ–º? (–≤–≤–µ–¥–∏—Ç–µ '—Ñ—Ä—É–∫—Ç' –∏–ª–∏ '–¥–µ–Ω—å–≥–∏'): ").strip().lower()
                if reward == "–¥–µ–Ω—å–≥–∏":
                    global budget
                    budget += 20
                    print("üí∏ +20 —Å–æ–º –¥–æ–±–∞–≤–ª–µ–Ω–æ –∫ –≤–∞—à–µ–º—É –±–∞–ª–∞–Ω—Å—É!")
                else:
                    fruit_choice = riddle["answer"]
                    cart.append(fruit_choice)
                    print(f"üçí –í—ã –ø–æ–ª—É—á–∏–ª–∏ {fruit_choice} –±–µ—Å–ø–ª–∞—Ç–Ω–æ!")
                break
            else:
                print("‚ùå –ù–µ–≤–µ—Ä–Ω–æ.")
                attempts += 1
                if attempts == 3:
                    surrender = input("–•–æ—Ç–∏—Ç–µ —Å–¥–∞—Ç—å—Å—è? (–¥–∞/–Ω–µ—Ç): ").strip().lower()
                    if surrender == "–¥–∞":
                        print(f"üí° –ü—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç: {riddle['answer']}")
                        break
                    else:
                        print("‚ñ∂Ô∏è –ü–æ–ø—Ä–æ–±—É–π—Ç–µ —Å–Ω–æ–≤–∞!")

                if not hint_used and attempts < 3:
                    hint = input("–•–æ—Ç–∏—Ç–µ –ø–æ–¥—Å–∫–∞–∑–∫—É? (–¥–∞/–Ω–µ—Ç): ").strip().lower()
                    if hint == "–¥–∞":
                        print(f"üí° –ü–æ–¥—Å–∫–∞–∑–∫–∞: {riddle['hint']}")
                        hint_used = True  # –ü–æ–¥—Å–∫–∞–∑–∫–∞ –±—ã–ª–∞ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∞, —Ñ–ª–∞–≥ –º–µ–Ω—è–µ–º –Ω–∞ True
                elif attempts >= 3:
                    continue

while budget >= min(fruit_store.values()):
    choice = input("\nüõí –ß—Ç–æ —Ö–æ—Ç–∏—Ç–µ –∫—É–ø–∏—Ç—å? (–≤–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ñ—Ä—É–∫—Ç–∞): ").strip().lower()
    if choice in fruit_store:
        price = fruit_store[choice]
        if price <= budget:
            cart.append(choice)
            budget -= price
            purchase_count += 1
            print(f"‚úÖ –í—ã –∫—É–ø–∏–ª–∏ {choice}. –û—Å—Ç–∞–ª–æ—Å—å {budget} —Å–æ–º.")

            if purchase_count == 2:
                answer = input("\nüé≤ –•–æ—Ç–∏—Ç–µ —Å—ã–≥—Ä–∞—Ç—å –≤ –∑–∞–≥–∞–¥–∫–∏? (–¥–∞/–Ω–µ—Ç): ").strip().lower()
                if answer == "–¥–∞":
                    offer_riddle()
        else:
            print(f"‚ùå {choice} —Å—Ç–æ–∏—Ç {price} —Å–æ–º. –£ –≤–∞—Å —Ç–æ–ª—å–∫–æ {budget} —Å–æ–º.")
    else:
        print("üö´ –£ –Ω–∞—Å —Ç–æ–ª—å–∫–æ —Ñ—Ä—É–∫—Ç—ã! –ó–∞—Ö–æ–¥–∏—Ç–µ –≤ –¥—Ä—É–≥–æ–π –º–∞–≥–∞–∑–∏–Ω!")

print("\nüí∏ –£ –≤–∞—Å –∑–∞–∫–æ–Ω—á–∏–ª–∏—Å—å –¥–µ–Ω—å–≥–∏ –∏–ª–∏ –≤—ã –±–æ–ª—å—à–µ –Ω–µ —Ö–æ—Ç–∏—Ç–µ –ø–æ–∫—É–ø–∞—Ç—å.")
final_offer = input("üéÅ –•–æ—Ç–∏—Ç–µ —Å—ã–≥—Ä–∞—Ç—å –≤ –∑–∞–≥–∞–¥–∫—É –∏ –ø–æ–ø—ã—Ç–∞—Ç—å—Å—è –ø–æ–ª—É—á–∏—Ç—å –ø–æ–¥–∞—Ä–æ–∫? (–¥–∞/–Ω–µ—Ç): ").strip().lower()
if final_offer == "–¥–∞":
    offer_riddle()

# –í–æ–ø—Ä–æ—Å –ø–æ—Å–ª–µ –≤—Å–µ—Ö –∑–∞–≥–∞–¥–æ–∫
continue_choice = input("\nüéÆ –•–æ—Ç–∏—Ç–µ –ø—Ä–æ–¥–æ–ª–∂–∏—Ç—å –ø–æ–∫—É–ø–∫–∏ –Ω–∞ –≤—ã–∏–≥—Ä–∞–Ω–Ω—ã–µ –¥–µ–Ω—å–≥–∏? (–¥–∞/–Ω–µ—Ç): ").strip().lower()
if continue_choice == "–¥–∞":
    while budget >= min(fruit_store.values()):
        choice = input("\nüõí –ß—Ç–æ —Ö–æ—Ç–∏—Ç–µ –∫—É–ø–∏—Ç—å? (–≤–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —Ñ—Ä—É–∫—Ç–∞): ").strip().lower()
        if choice in fruit_store:
            price = fruit_store[choice]
            if price <= budget:
                cart.append(choice)
                budget -= price
                print(f"‚úÖ –í—ã –∫—É–ø–∏–ª–∏ {choice}. –û—Å—Ç–∞–ª–æ—Å—å {budget} —Å–æ–º.")
            else:
                print(f"‚ùå {choice} —Å—Ç–æ–∏—Ç {price} —Å–æ–º. –£ –≤–∞—Å —Ç–æ–ª—å–∫–æ {budget} —Å–æ–º.")
        else:
            print("üö´ –£ –Ω–∞—Å —Ç–æ–ª—å–∫–æ —Ñ—Ä—É–∫—Ç—ã! –ó–∞—Ö–æ–¥–∏—Ç–µ –≤ –¥—Ä—É–≥–æ–π –º–∞–≥–∞–∑–∏–Ω!")
else:
    print("\nüß∫ –ò–≥—Ä–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞! –°–ø–∞—Å–∏–±–æ –∑–∞ –∏–≥—Ä—É.")
    print(f"üí∞ –í–∞—à –æ—Å—Ç–∞—Ç–æ–∫: {budget} —Å–æ–º.")
    print("üçè –í—ã –∫—É–ø–∏–ª–∏ —Å–ª–µ–¥—É—é—â–∏–µ —Ñ—Ä—É–∫—Ç—ã:")
    for item in cart:
        print(f" - {item.title()}")
