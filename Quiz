score = 0

def check_answer(user_answer, correct_answer):
    # Используем difflib для сравнения строк с учётом возможных опечаток и частичных совпадений
    match = difflib.get_close_matches(user_answer.lower(), [correct_answer.lower()], n=1, cutoff=0.8)

    # Также проверим, если человек ввел только фамилию (например, "маск")
    if user_answer.lower() in correct_answer.lower():
        return True
    return match and match[0] == correct_answer.lower()

for question, data in victorina.items():
    print(question)
    answer = input("Ваш ответ: ").strip().lower()

    if question.startswith('Обитает ли'):  # Обработка вопросов с "да/нет"
        if answer == 'да' or answer == 'нет':
            correct = "да" if "да" in data['correct_answer'].lower() else "нет"
            if answer == correct:
                print("Правильно!")
                score += 1
            else:
                print(f"Неправильно! Правильный ответ: {data['correct_answer']}")
                print(data['explanation'])
        else:
            print("Ответьте 'да' или 'нет'.")
            continue
    else:  # Для остальных вопросов
        if check_answer(answer, data['correct_answer']):
            print("Правильно!")
            score += 1
        else:
            print(f"Неправильно! Правильный ответ: {data['correct_answer']}")
            print(data['explanation'])

print(f"Ваш итоговый счет: {score}")
